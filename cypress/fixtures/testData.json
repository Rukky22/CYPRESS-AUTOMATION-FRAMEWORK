{
  "environments": {
    "dev": {
      "url": "https://dev.yourapp.com/login"
    },
    "staging": {
      "url": "https://staging.yourapp.com/login"
    },
    "production": {
      "url": "https://yourapp.com/login"
    }
  },
  "validUsers": [
    {
      "testCaseId": "CY-TC001",
      "description": "Admin user login",
      "username": "admin@test.com",
      "password": "Admin@123",
      "role": "admin",
      "expectedUrl": "/admin/dashboard"
    },
    {
      "testCaseId": "CY-TC002",
      "description": "Regular user login",
      "username": "user@test.com",
      "password": "User@123",
      "role": "user",
      "expectedUrl": "/dashboard"
    },
    {
      "testCaseId": "CY-TC003",
      "description": "Manager user login",
      "username": "manager@test.com",
      "password": "Manager@123",
      "role": "manager",
      "expectedUrl": "/manager/dashboard"
    }
  ],
  "invalidUsers": [
    {
      "testCaseId": "CY-TC004",
      "description": "Invalid username",
      "username": "invalid@test.com",
      "password": "ValidPassword123",
      "expectedError": "Invalid credentials",
      "errorType": "invalid_username"
    },
    {
      "testCaseId": "CY-TC005",
      "description": "Invalid password",
      "username": "admin@test.com",
      "password": "WrongPassword",
      "expectedError": "Invalid credentials",
      "errorType": "invalid_password"
    },
    {
      "testCaseId": "CY-TC006",
      "description": "Empty username",
      "username": "",
      "password": "ValidPassword123",
      "expectedError": "Username is required",
      "errorType": "empty_username"
    },
    {
      "testCaseId": "CY-TC007",
      "description": "Empty password",
      "username": "admin@test.com",
      "password": "",
      "expectedError": "Password is required",
      "errorType": "empty_password"
    },
    {
      "testCaseId": "CY-TC008",
      "description": "SQL Injection attempt",
      "username": "admin' OR '1'='1",
      "password": "password",
      "expectedError": "Invalid credentials",
      "errorType": "sql_injection",
      "securityTest": true
    },
    {
      "testCaseId": "CY-TC009",
      "description": "XSS attack attempt",
      "username": "<script>alert('xss')</script>",
      "password": "password",
      "expectedError": "Invalid credentials",
      "errorType": "xss_attempt",
      "securityTest": true
    }
  ],
  "edgeCases": [
    {
      "testCaseId": "CY-TC010",
      "description": "Username with special characters",
      "username": "user+special@test.com",
      "password": "ValidPassword123",
      "expectedResult": "success"
    },
    {
      "testCaseId": "CY-TC011",
      "description": "Very long username",
      "username": "verylongusernamethatshouldstillbevalidandtested@test.com",
      "password": "ValidPassword123",
      "expectedResult": "error",
      "expectedError": "Username too long"
    }
  ]
}
