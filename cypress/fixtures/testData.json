{
  "environments": {
    "dev": {
      "url": "https://opensource-demo.orangehrmlive.com/web/index.php/auth/login"
    },
    "staging": {
      "url": "https://staging.yourapp.com/login"
    },
    "production": {
      "url": "https://yourapp.com/login"
    }
  },
  "validUsers": [
    {
      "testCaseId": "CY-TC001",
      "description": "Admin user login",
      "username": "Admin",
      "password": "admin123",
      "role": "admin",
      "expectedUrl": "/dashboard/index"
    },
    {
      "testCaseId": "CY-TC002",
      "description": "Regular user login",
      "username": "Admin",
      "password": "admin123",
      "role": "user",
      "expectedUrl": "/dashboard/index"
    },
    {
      "testCaseId": "CY-TC003",
      "description": "Manager user login",
      "username": "Admin",
      "password": "admin123",
      "role": "manager",
      "expectedUrl": "/dashboard/index"
    }
  ],
  "invalidUsers": [
    {
      "testCaseId": "CY-TC004",
      "description": "Invalid username",
      "username": "invaliduser",
      "password": "admin123",
      "expectedError": "Invalid credentials",
      "errorType": "invalid_username"
    },
    {
      "testCaseId": "CY-TC005",
      "description": "Invalid password",
      "username": "Admin",
      "password": "WrongPassword",
      "expectedError": "Invalid credentials",
      "errorType": "invalid_password"
    },
    {
      "testCaseId": "CY-TC006",
      "description": "Empty username",
      "username": "",
      "password": "admin123",
      "expectedError": "Required",
      "errorType": "empty_username"
    },
    {
      "testCaseId": "CY-TC007",
      "description": "Empty password",
      "username": "Admin",
      "password": "",
      "expectedError": "Required",
      "errorType": "empty_password"
    },
    {
      "testCaseId": "CY-TC008",
      "description": "SQL Injection attempt",
      "username": "Admin' OR '1'='1",
      "password": "password",
      "expectedError": "Invalid credentials",
      "errorType": "sql_injection",
      "securityTest": true
    },
    {
      "testCaseId": "CY-TC009",
      "description": "XSS attack attempt",
      "username": "<script>alert('xss')</script>",
      "password": "password",
      "expectedError": "Invalid credentials",
      "errorType": "xss_attempt",
      "securityTest": true
    }
  ],
  "edgeCases": [
    {
      "testCaseId": "CY-TC010",
      "description": "Username with special characters",
      "username": "user+special@test.com",
      "password": "admin123",
      "expectedResult": "error",
      "expectedError": "Invalid credentials"
    },
    {
      "testCaseId": "CY-TC011",
      "description": "Very long username",
      "username": "verylongusernamethatshouldstillbevalidandtestedverylongusername@test.com",
      "password": "admin123",
      "expectedResult": "error",
      "expectedError": "Invalid credentials"
    }
  ]
}
