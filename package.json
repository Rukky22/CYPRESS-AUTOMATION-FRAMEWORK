{
  "name": "cypress-automation-framework",
  "version": "1.0.0",
  "description": "Cypress test automation framework with data-driven testing",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:report": "cypress run --reporter mochawesome && npm run merge:reports && npm run generate:report",
    "merge:reports": "mochawesome-merge cypress/reports/json/*.json > cypress/reports/report.json",
    "generate:report": "marge cypress/reports/report.json -f report -o cypress/reports/html",
    "test": "npm run cy:run"
  },
  "keywords": [
    "cypress",
    "automation",
    "testing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^13.6.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "eslint": "^8.55.0",
    "eslint-plugin-cypress": "^2.15.1",
    "prettier": "^3.1.1",
    "dotenv": "^16.3.1"
  }
}
